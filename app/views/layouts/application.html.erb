<!DOCTYPE html>
<html>
<head>
  <title>Entregas</title>
  <%= stylesheet_link_tag "scaffold.css", :media => :screen %>
  <%= stylesheet_link_tag "print.css", :media => :print %>
  
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	
	<div class="wrapper">
		<div id="left_content">
			<!-- <h2>Listagem</h2>
						<fieldset>
							<p><%= label_tag :quantidade_de_entregadores %>
							<%= text_field_tag :cec %></p>
							<%= date_select :cec, :data_da_entrega, {:order => [:day, :month, :year], :discard_year => true} %>
						</fieldset> -->
			
			<h2>Pesquisa CEC</h2>
			<fieldset>
		
				<% form_tag cecs_path, :method => 'get' do %>
				  <p>
					<%= label_tag :por_pedido %>
				    <%= text_field_tag :numero_do_pedido, params[:numero_do_pedido] %>
				    <%= submit_tag "Pesquisar", :name => nil %>
				  </p>
				<% end %>
				
				<% form_tag cecs_path, :method => 'get' do %>
				  <p>
					<%= label_tag :por_numero %>
				    <%= text_field_tag :id, params[:id] %>
				    <%= submit_tag "Pesquisar", :name => nil %>
				  </p>
				<% end %>
			</fieldset>
			
			<h2>Entregas</h2>
			<fieldset>
				<h3><%= link_to "Hoje", :controller => "cecs", :action => "index", :data => Date.today %></h3>
				<% Cec.proximas_entregas.each do |d| %>
					<% @quantidade = Cec.count_by_sql "SELECT COUNT(id) FROM cecs WHERE cecs.data_da_entrega = '#{d.data_da_entrega}'"%>
					<h3><%= link_to d.data_da_entrega.strftime("%d/%m ") + "(#{@quantidade} CECs)", :controller => "cecs", :action => "index", :data => d.data_da_entrega %></h3>
				<% end %>
				
			</fieldset>
		</div>
		
		<div id="right_content">
			<%= yield %>
		</div>
		

	</div>

</body>
</html>
